

#
# Definitions
#

 MAKE         = make -s
 CC           = @CC@
 MYHEADER     = -I../../../include/ -I../../../include/base -I../../../include/xpn_client/
 MYLIBPATH    = -L../../../src/base -L../../../src/xpn_client
 LIBRARIES    = -lxpn -lpthread -ldl
 MYFLAGS      = -g -Wall -D_REENTRANT -DPOSIX_THREADS -DHAVE_CONFIG_H -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64


#
# Rules
#

all:  main

main: main.o
	$(CC)  -o main main.o  $(MYLIBPATH) $(LIBRARIES)

%.o: %.c
	$(CC) $(CFLAGS)  $(MYFLAGS) $(MYHEADER) -c $< -o $@

clean:
	rm -f ./*.o
	rm -f ./main

